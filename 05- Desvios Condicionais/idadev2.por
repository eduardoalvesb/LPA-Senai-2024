/*
 * Algoritmo: Idade v2
 * @EduardoAlves
 */


programa
{
	
	funcao inicio()
	{
		inteiro idade 

		escreva("Digite a sua idade: \n")
		leia(idade)

		se (idade<18)
		{
			escreva ("Você é de menor")
		}
		senao
		{
			escreva ("Você já pode beber cerveja")
		}
		
		
	}
}

